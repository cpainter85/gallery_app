=form_for @image, html: { multipart: true} do |f|
  -if @image.errors.any?
    %h2=pluralize(@image.errors.count, 'error') + ' prohibited this image from being saved:'
    %ul
      -@image.errors.full_messages.each do |message|
        %li=message
  %p
    =f.label :title
    =f.text_field :title
  %p
    =f.label :description
    =f.text_area :description
  %p
    =f.label :image
    =f.file_field :image
  %p
    =f.submit
